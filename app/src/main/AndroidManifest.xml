            android:screenOrientation="portrait"/>
        <activity
            android:name=".userprofile.PatientLogin"
            android:parentActivityName=".userprofile.ChoiceRegister"
            android:screenOrientation="portrait"/>
        <activity android:name=".userprofile.PatientDetails"
            android:screenOrientation="portrait"/>
