<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout_doctor"
    tools:context=".doctorviewpatient.DoctorViewPatients">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/doctor_nav_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Name:"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:id="@+id/tvDoctorVIewPatientNameTItle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PatientName"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="20dp"

            android:id="@+id/tvDoctorVIewPatientsName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image/Video:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:id="@+id/tvDoctorViewPatientImageDataPacket"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:layout_marginLeft="20dp"
            android:id="@+id/btnDoctorViewPatientImageDataPacket"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Files:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:id="@+id/tvDoctorViewPatientFilesDataPacket"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:layout_marginLeft="20dp"
            android:id="@+id/btnDoctorVIewPatientsFilesDataPacket"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heartbeat:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:id="@+id/tvDoctorViewPatientHeartbeatDataPacket"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:layout_marginLeft="20dp"
            android:id="@+id/btnDoctorVIewPatientHeartbeatDataPacket"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:id="@+id/locationTextView"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:layout_marginLeft="20dp"
            android:id="@+id/locationButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:id="@+id/tvDoctorVIewPatientDescriptionDataPacket"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content of description"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:id="@+id/tvDoctorViewPatientContentOfDescriptionDataPacket"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvGiveRecommendations"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:text="Give Recommendations:"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Write Recommendations here..."
            android:layout_marginLeft="20dp"
            android:id="@+id/editTextDoctorGiveRecommendations"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Recommendation"
            android:layout_marginLeft="20dp"
            android:id="@+id/btnRecommendations"
            />


    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/doctorNv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/doctor_navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/doctor_nav_bar_action_header">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>